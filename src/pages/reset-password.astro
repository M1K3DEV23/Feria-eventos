---
import Layout from '@/layouts/Layout.astro';
---

<Layout title="Reset Password">
  <div class="container">
    <h1>Recuperar Contraseña</h1>
    <form>
      <div>
        <label for="email">Correo Electrónico:</label>
        <input type="email" id="email" name="email" />
      </div>
    </form>
    <button type="submit">Enviar Instrucciones</button>
  </div>
</Layout>

<style>
  .container {
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    max-width: 800px;
    margin: 0 auto;
    padding: 2rem;
    height: 80vh;
  }

  h1 {
    text-align: center;
    font-size: 3rem;
    margin-bottom: 3rem;
  }

  form {
    display: grid;
    gap: 1rem;
    grid-template-columns: 1fr;
    margin-bottom: 3rem;
  }

  label {
    font-weight: bold;
  }

  input {
    padding: 0.5rem;
    border: 1px solid #ccc;
    border-radius: 4px;
  }

  button[type='submit'] {
    padding: 0.5rem 1rem;
    background-color: #333;
    color: #fff;
    border: none;
    border-radius: 4px;
    cursor: pointer;
  }

  @media {
    .container {
      max-width: 200px;
    }
  }
</style>
